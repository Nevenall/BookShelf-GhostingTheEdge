    "version": "0.2.0",
    "configurations": [
    {
       "type": "node",
       "request": "launch",
       "name": "Launch via NPM",
       "runtimeExecutable": "npm",
       "runtimeArgs": [
          "run-script",
          "dev"
       ],
       "port": 8080
    },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Harness",
            "program": "${workspaceFolder}/harness.js"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}/src"
        }
    ]
}